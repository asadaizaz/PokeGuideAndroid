<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"

              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">



    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_evo"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"

            android:elevation="4dp"
            />

    </android.support.design.widget.AppBarLayout>


    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:padding="12dp"
        android:id="@+id/poke_name"
        android:inputType="phone"
        android:ems="10"
        >
    </Spinner>

    <EditText
        android:id="@+id/cp_text"
        android:hint="Enter CP"
        android:imeOptions="actionNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:inputType="phone"
        android:ems="10"

        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="89dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/poke_enter_icon"
            />
        <TextView
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:textSize="24dp"

            android:id="@+id/poke_enter_name"
            android:layout_toRightOf="@id/poke_enter_icon"

            android:layout_centerInParent="true"
            android:paddingRight="24dp"
            android:paddingLeft="10dp"/>
        <TextView
            android:id="@+id/cp_first"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/poke_enter_name"
            android:layout_centerInParent="true"
android:textSize="24dp"
            />




    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/poke_result_icon"

            />
        <TextView
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:id="@+id/poke_result_name"


            android:layout_toRightOf="@id/poke_result_icon"

            android:layout_centerInParent="true"
            android:paddingRight="24dp"

            android:paddingLeft="10dp"/>

        <TextView
            android:id="@+id/cp_second"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/poke_result_name"
            android:layout_centerInParent="true"
            android:textSize="24dp"
            />



    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pokemon_third_icon"

            />
        <TextView
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:id="@+id/pokemon_third_text"
            android:layout_toRightOf="@id/pokemon_third_icon"
            android:layout_centerInParent="true"
            android:paddingRight="24dp"
            android:paddingLeft="10dp"/>


        <TextView
            android:id="@+id/cp_third"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/pokemon_third_text"
            android:layout_centerInParent="true"
            android:textSize="24dp"
            />



    </RelativeLayout>



</LinearLayout>
    <com.google.android.gms.ads.AdView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/adView_evo"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id"
        android:layout_alignParentBottom="true"
        >
        </com.google.android.gms.ads.AdView>
</RelativeLayout>